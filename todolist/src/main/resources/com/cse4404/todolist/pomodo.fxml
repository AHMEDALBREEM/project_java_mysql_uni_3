<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main_vbox" alignment="CENTER" prefHeight="213.0" prefWidth="362.0" style="-fx-background-color: #9CE748;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse4404.todolist.HelloController_pomodo">
<Pane>
    <children>

        <Label fx:id="timerLabel" alignment="CENTER" layoutX="96.0" layoutY="7.0" prefHeight="57.0" prefWidth="163.0" style="-fx-font-size: 50;" text="30:00">
            <font>
                <Font name="Arial Rounded MT Bold" size="50.0" />
            </font></Label>

        <Button fx:id="startButton" layoutX="278.0" layoutY="30.0" onAction="#handleStartButton" prefHeight="41.0" prefWidth="67.0" style="-fx-background-color: #FFFFFF;" text="Start">
        </Button>
        <Button fx:id="shortBreakButton" disable="true" layoutX="9.0" layoutY="85.0" onAction="#handleShortBreakButton" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #FFFFFF;" text="Short Break">

        </Button>
        <Button fx:id="longBreakButton" disable="true" layoutX="118.0" layoutY="86.0" onAction="#handleLongBreakButton" prefHeight="28.0" prefWidth="119.0" style="-fx-background-color: #FFFFFF;" text="Long Break">

        </Button>
        <Button fx:id="continueButton" disable="true" layoutX="251.0" layoutY="86.0" onAction="#handleContinueButton" prefHeight="28.0" prefWidth="97.0" style="-fx-background-color: #FFFFFF;" text="Continue">

        </Button>
        <Button fx:id="stopButton" disable="true" layoutX="20.0" layoutY="30.0" onAction="#handleStopButton" prefHeight="41.0" prefWidth="67.0" style="-fx-background-color: #FFFFFF;" text="Stop">

        </Button>
      <Label fx:id="instructionlabel" alignment="CENTER" disable="true" layoutX="10.0" layoutY="129.0" prefHeight="16.0" prefWidth="335.0" style="-fx-font-size: 10;" text="Starting Time time plus the short break time ">
</Label>
    </children>
</Pane>
   <Button mnemonicParsing="false" onAction="#onbackclick" prefHeight="30.0" prefWidth="112.0" text="BACK">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>
</VBox>
