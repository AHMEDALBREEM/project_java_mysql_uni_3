<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main_vbox" alignment="CENTER" prefHeight="328.0" prefWidth="520.0" styleClass="page-color" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse4404.todolist.HelloController_pomodo">
<Pane prefHeight="328.0" prefWidth="520.0" styleClass="page-color" stylesheets="@styles.css">
    <children>

        <Label fx:id="timerLabel" alignment="CENTER" layoutX="142.0" layoutY="43.0" prefHeight="73.0" prefWidth="226.0" style="-fx-font-size: 50;" text="30:00">
            <font>
                <Font name="Arial Rounded MT Bold" size="50.0" />
            </font></Label>

        <Button fx:id="startButton" layoutX="439.0" layoutY="59.0" onAction="#handleStartButton" prefHeight="41.0" prefWidth="67.0" styleClass="light-button_pomodo" text="Start">
        </Button>
        <Button fx:id="shortBreakButton" disable="true" layoutX="14.0" layoutY="131.0" onAction="#handleShortBreakButton" prefHeight="30.0" prefWidth="119.0" styleClass="light-button_pomodo" text="Short Break">

        </Button>
        <Button fx:id="longBreakButton" disable="true" layoutX="197.0" layoutY="132.0" onAction="#handleLongBreakButton" prefHeight="28.0" prefWidth="112.0" styleClass="light-button_pomodo" text="Long Break">

        </Button>
        <Button fx:id="continueButton" disable="true" layoutX="400.0" layoutY="132.0" onAction="#handleContinueButton" prefHeight="28.0" prefWidth="106.0" styleClass="light-button_pomodo" text="Continue">

        </Button>
        <Button fx:id="stopButton" disable="true" layoutX="18.0" layoutY="59.0" onAction="#handleStopButton" prefHeight="41.0" prefWidth="67.0" styleClass="light-button_pomodo" text="Stop">

        </Button>
      <Label fx:id="instructionlabel" alignment="CENTER" layoutX="27.0" layoutY="194.0" prefHeight="16.0" prefWidth="456.0" style="-fx-font-size: 10;" text="Starting Time time plus the short break time ">
</Label>
         <Button layoutX="406.0" layoutY="223.0" mnemonicParsing="false" onAction="#onbackclick" prefHeight="28.0" prefWidth="94.0" styleClass="light-button_pomodo" text="BACK">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         <Button layoutX="29.0" layoutY="223.0" mnemonicParsing="false" onAction="#oncomplete" prefHeight="30.0" prefWidth="112.0" styleClass="light-button_pomodo" text="Complete">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         <TextField fx:id="as" layoutX="155.0" layoutY="226.0" onInputMethodTextChanged="#onchange" prefHeight="28.0" prefWidth="119.0" promptText="Enter Task Id" />
         <Label fx:id="information" alignment="CENTER" layoutX="38.0" layoutY="278.0" prefHeight="16.0" prefWidth="456.0" style="-fx-font-size: 10;" />
    </children>
</Pane>
</VBox>
